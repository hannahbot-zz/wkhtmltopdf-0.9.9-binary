#!/usr/bin/env ruby

arch = case RUBY_PLATFORM
  when /64.*linux/
    'linux_amd64'
  when /linux/
    'linux_386'
  when /darwin/
    'darwin_386'
  else
    raise "Invalid platform. Must be running linux or intel-based Mac OS."
end

args = $*.map { |x| x.include?(' ') ? "'" + x + "'" : x }
cmd = File.expand_path "#{File.dirname(__FILE__)}/../libexec/wkhtmltopdf-#{arch}"

exec "#{cmd} #{args.join(' ')}"
